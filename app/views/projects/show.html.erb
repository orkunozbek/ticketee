<% title(@project.name, "Projects") %>
<h2><%= @project.name %> | <%= link_to "Edit", edit_project_path(@project) %> | <%= link_to "Delete Project", @project, :method => :delete,
:confirm => "Are you sure you want to delete this project?" %></h2>

<%= link_to "New Ticket", new_project_ticket_path(@project) %>

<ul id='tickets'>
  <% @project.tickets.each do |ticket| %>
    <li>
    #<%= ticket.id %> - <%= link_to ticket.title, [@project, ticket] %> | 	<%= link_to "Delete Ticket", [@project, ticket], :method => :delete,
		:confirm => "Are you sure you want to delete this ticket?" %>
    </li>
  <% end %>
</ul>